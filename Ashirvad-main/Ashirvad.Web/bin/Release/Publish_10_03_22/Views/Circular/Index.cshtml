@model Ashirvad.Data.Model.CircularMaintenanceModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="messagealert" id="alert_container"></div>
    <div class="row">
        <section class="col-md-5">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Circular Entry</h3>

                    @{
                        Html.RenderPartial("Create", new ViewDataDictionary(Model.CircularEntity));
                    }
                </div>
            </div>
        </section>
        <section class="col-md-7">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="col-md-6">Circular Details</h3>

                    @{
                        Html.RenderPartial("Manage", new ViewDataDictionary(Model.CircularEntitiesData));
                    }
                </div>
            </div>
        </section>
    </div>

