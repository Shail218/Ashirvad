@model Ashirvad.Data.UPIEntity
<form id="fUPIDetail">
    <div class="form-group" id="dInformation">
        <div class="col-md-12">
            @Html.Label("UPI ID", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.UPICode, new { @class = "form-control required", @alt = "UPI ID", autocomplete = "off" })
            @Html.HiddenFor(x => x.UPIId)
        </div>
        <div class="col-md-7" style="display:none;">
            @Html.Label("Select Branch", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <select name="BranchName" id="BranchName" class="form-control" alt="Branch">
                <option value="0">--Select Branch--</option>
            </select>
            @Html.HiddenFor(x => x.BranchData.BranchID)
        </div>

        <div class="form-group AddUPIDetails">
            <div class="col-md-12" style="text-align: right;">
                <br />
                <a onclick="return SaveUPI();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                    <span class="ladda-label">
                        Save
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
                <a href="@Url.Action("UPIMaintenance","Upi", new { @upiID=0 })" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                    <span class="ladda-label">
                        Cancel
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
            </div>
        </div>
    </div>
</form>