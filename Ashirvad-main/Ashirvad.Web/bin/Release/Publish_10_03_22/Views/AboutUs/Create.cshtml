@model Ashirvad.Data.AboutUsEntity
<form id="fAboutUsDetails">
    <div class="form-group" id="dInformation">
        <div class="col-md-12">
            @Html.HiddenFor(x=>x.AboutUsID)
            @Html.Label("About us", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextAreaFor(x => x.AboutUsDesc, new { @class = "form-control", autocomplete = "off", alt = "About us" })
        </div>
        <div class="col-md-3">
            @Html.Label("Website Url", htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(x => x.WebsiteURL, new { @class = "form-control", autocomplete = "off", alt = "Website Url" })
            @Html.HiddenFor(x => x.AboutUsID)
            @Html.HiddenFor(x => x.BranchInfo.BranchID)
            @Html.HiddenFor(x => x.HeaderImage)
            @Html.HiddenFor(x => x.HeaderImageName)
        </div>
        <div class="col-md-3">
            @Html.Label("Email ID", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control required email", autocomplete = "off", alt = "Email ID" })
        </div>
        <div class="col-md-3">
            @Html.Label("Contact No", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.ContactNo, new { @class = "form-control required mobile", alt = "Contact No", autocomplete = "off", maxlength = 10, minlength = 10 })
        </div>
        <div class="col-md-3">
            @Html.Label("Whatsapp No", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.WhatsAppNo, new { @class = "form-control required mobile", alt = "Whatsapp No", autocomplete = "off", maxlength = 10, minlength = 10 })
        </div>
        <div class="col-md-3">
            @Html.Label("Header Image", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <input class="file-upload fileRequired" alt="Header Image" id="fuHeaderImage" name="ImageFile" type="file" accept="image/*" />
            @Html.HiddenFor(x => x.HeaderImageText, htmlAttributes: new { @class = "control-label fileRequired2" })
        </div>
        <div class="col-md-1" style="margin-top:5px;">
            @if (Model == null)
            {
                <img CssClass="imgStud" Style="width: 80px; height: 80px; border: 1px solid #000;" id="imgStud" />
            }
            else
            {
                if (Model.FilePath != "" && Model.FilePath != null)
                {
                    <img CssClass="imgStud" src="@Model.FilePath" Style="width: 80px; height: 80px; border: 1px solid #000;" id="imgStud" />
                }
                else
                {
                    <img CssClass="imgStud" Style="width: 80px; height: 80px; border: 1px solid #000;" id="imgStud" />
                }
            }
        </div>
        <div class="form-group AboutUsMasterCreate">
            <div class="col-md-8" style="text-align: right;margin-top:27px;">
                <a onclick="return SaveAboutUs();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                    <span class="ladda-label">
                        Save
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
                <a href="@Url.Action("AboutUsMaintenance","AboutUs")" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                    <span class="ladda-label">
                        Cancel
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
            </div>
        </div>
    </div>
</form>