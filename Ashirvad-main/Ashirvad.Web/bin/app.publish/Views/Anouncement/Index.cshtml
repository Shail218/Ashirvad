@model Ashirvad.Data.Model.AnnouncementMaintenanceModel

@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<section class="content">
    <div class="messagealert" id="alert_container"></div>
    <div class="row">
        <section class="col-md-5">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Announcement Entry</h3>
               </div>
                <div class="box-body">
                    @{ Html.RenderPartial("Create", new ViewDataDictionary(Model.AnnouncementInfo)); }
                </div>
            </div>
        </section>
        <section class="col-md-7">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="col-md-6" id="exceltitle">Announcement Details</h3>
                        <button type="button" onclick="Exportdata('Anouncement')" class="btn btn-success"><i class="fa fa-file-excel-o" style="color:white"></i>  Export</button>
                      @{ Html.RenderPartial("Manage", new ViewDataDictionary(Model.AnnouncementData)); }
                </div>
            </div>
        </section>
    </div>
    @section Scripts {
        <script type="text/javascript" src="~/scripts/app/announcement.js"></script>
        @*<script src="~/ThemeData/plugins/jQuery/jquery-2.2.3.min.js"></script>*@
        <script src="~/ThemeData/plugins/datatables/jquery.dataTables.min.js"></script>
        <script src="~/ThemeData/plugins/datatables/dataTables.bootstrap.min.js"></script>
        <script>
            $(document).ready(function () {

                $('#studenttbl').DataTable({
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": true,
                    "bInfo": true,
                    "bAutoWidth": true,
                    "order": [[0, "desc"]]
                });
            });
        </script>
        <script type="text/javascript">
            function ConfirmationDialog() {
                if (confirm("Are you sure to continue?"))
                    return true;
                else
                    return false;
            }
        </script>
    }
</section>

