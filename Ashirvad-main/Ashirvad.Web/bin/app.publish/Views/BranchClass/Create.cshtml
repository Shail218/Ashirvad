﻿@model Ashirvad.Data.BranchClassEntity
<div class="col-md-12">
    <form id="fBranchClassDetail">
        @Html.HiddenFor(x => x.JsonData)
        @Html.HiddenFor(x => x.IsEdit)
        @Html.HiddenFor(x => x.BranchCourse.course_dtl_id)
        @Html.HiddenFor(x => x.Class_dtl_id)
        <div style="margin-top:10px;">
            <div class="col-md-6">
                @Html.Label("Course Name", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                <select name="ClassName" id="CourseName" class="form-control requiredDDL" alt="Course Name">
                    <option value="0">--Select Course--</option>
                </select>
            </div>
        </div>
        <div id="UserDetails">

        </div>
        <div class="col-md-12">
            <div id="classdetaildiv" style="max-height: 300px; overflow-y: scroll !important">
                @if (Model.Class_dtl_id > 0)
                {


                    Html.RenderPartial("UpdateClassDataTable", new ViewDataDictionary(Model.BranchClassData));


                }
                else
                {


                    Html.RenderPartial("UpdateClassDataTable", new ViewDataDictionary(Model.BranchClassData));


                }

            </div>


                </div>
            <div class="form-group">
                <div class="col-md-12" style="text-align: right;">
                    <br />
                    <a onclick="return SaveClassDetail();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                        <span class="ladda-label">
                            Save
                        </span>
                        <span class="ladda-spinner"></span>
                    </a>
                    <a href="@Url.Action("ClassMaintenance","BranchClass", new { @ClassID=0 })" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                        <span class="ladda-label">
                            Cancel
                        </span>
                        <span class="ladda-spinner"></span>
                    </a>
                </div>
            </div>
    </form>

</div>
