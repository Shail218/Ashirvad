@model Ashirvad.Data.Model.StudentMaintenanceModel
@{
    ViewBag.Title = "Student Active/Inactive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="messagealert" id="alert_container"></div>
    <div class="row">
        <section class="col-md-12">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Student Active/Inactive</h3>
                </div>
                <div class="box-body">
                    @{
                        Html.RenderPartial("FilterStudentData", new ViewDataDictionary(Model.StudentInfo));
                    }
                </div>
            </div>
        </section>
        <section class="col-md-12">
            <div class="box box-primary">

                <div class="box-header with-border" id="studentdetails">
                    @{
                        Html.RenderPartial("ManageStudentData", new ViewDataDictionary(Model.StudentData));
                    }
                </div>
            </div>
        </section>
    </div>
    @section Scripts {

        @*<script src="~/ThemeData/plugins/jQuery/jquery-2.2.3.min.js"></script>*@
        <script src="~/ThemeData/plugins/datatables/jquery.dataTables.min.js"></script>
        <script src="~/ThemeData/plugins/datatables/dataTables.bootstrap.min.js"></script>
