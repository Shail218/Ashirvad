@using Ashirvad.Web.Controllers;
@model List<Ashirvad.Data.AnnouncementEntity>
<table style="width: 100%;" id="studenttbl" class="table table-striped dataTable no-footer">
    <thead>
        <tr style="background-color:#005cbf;font-style:inherit;color:aliceblue">
            <th>
                Branch Name
            </th>
            <th>
                Announcement
            </th>
            <th>
                Edit
            </th>
            <th class="AnnouncementMasterDelete">
                Delete
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.BranchData.BranchName
            </td>  
            <td>
                 @item.AnnouncementText
            </td>
    <td>
        <a href="@Url.Action("AnnouncementMaintenance", "Anouncement", new { annoID = item.AnnouncementID })">
            <img src="~/ThemeData/images/viewIcon.png" />
        </a>
    </td>
    <td class="AnnouncementMasterDelete">
        <a href="#" onclick="RemoveAnnouncement(@item.AnnouncementID);">
            <img src="~/ThemeData/images/delete.png" />
        </a>
    </td>
</tr>
    }

</table>
