@model Ashirvad.Data.BranchAgreementEntity
<form id="fAgreementDetail">
    <div class="form-group" id="dInformation">
        <div class="col-md-12">
            @Html.Label("Select Branch", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <select name="BranchName" id="BranchName" class="form-control requiredDDL select2" alt="Branch">
                <option value="0">--Select Branch--</option>
            </select>
            @Html.HiddenFor(x => x.BranchData.BranchID)
        </div>
        <div class="col-md-6" style="margin-top:10px">
            @Html.Label("Agreement From Date", htmlAttributes: new { @class = "control-label" })
            <div id="datepickerfromdate" class="input-group date" data-date-format="dd/mm/yyyy">
                @if (Model == null)
                {
                    @Html.TextBoxFor(x => x.AgreementFromDate, null, new { @class = "form-control", @alt = "Agreement From Date", autocomplete = "off", @readonly = "readonly" })
                }
                else
                {
                    if (Model.AgreementFromDate == null)
                    {
                        @Html.TextBoxFor(x => x.AgreementFromDate, new { @class = "form-control", autocomplete = "off", @readonly = "readonly", @alt = "Agreement From Date" })
                    }
                    else
                    {
                        @Html.TextBoxFor(x => x.AgreementFromDate, Model.AgreementFromDate.ToString("dd/MM/yyyy"), new { @class = "form-control", autocomplete = "off", @readonly = "readonly", @alt = "Agreement From Date" })
                    }
                }
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
        </div>
        <div class="col-md-6" style="margin-top:10px">
            @Html.Label("Agreement To Date", htmlAttributes: new { @class = "control-label" })
            <div id="datepickertodate" class="input-group date" data-date-format="dd/mm/yyyy">
                @if (Model == null)
                {
                    @Html.TextBoxFor(x => x.AgreementToDate, null, new { @class = "form-control", @alt = "Agreement To Date", autocomplete = "off", @readonly = "readonly" })
                }
                else
                {
                    if (Model.AgreementToDate == null)
                    {
                        @Html.TextBoxFor(x => x.AgreementToDate, new { @class = "form-control", autocomplete = "off", @readonly = "readonly", @alt = "Agreement To Date" })
                    }
                    else
                    {
                        @Html.TextBoxFor(x => x.AgreementToDate, Model.AgreementToDate.ToString("dd/MM/yyyy"), new { @class = "form-control", autocomplete = "off", @readonly = "readonly", @alt = "Agreement To Date" })
                    }
                }
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
        </div>
        <div class="col-md-6" style="margin-top:7px">
            @Html.Label("Amount", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.Amount, new { @class = "form-control required", @alt = "Amount", autocomplete = "off" })
            @Html.HiddenFor(x => x.AgreementID)
        </div>
        <div class="col-md-6" style="margin-top:7px">
            @Html.Label("Status", htmlAttributes: new { @class = "control-label" })<br />
            <table id="rdbResult" class="radioboxlist form-control">
                <tbody>
                    <tr>
                        <td>
                            <input type="radio" name="Status" id="rowStaActive" value="Active" checked="checked"/>
                            <lable for="rowStaActive">Active</lable>
                        </td>
                        <td>
                            <input type="radio" name="Status" id="rowStaInactive" value="Inactive" style="margin-left:10px" />
                            <lable for="rowStaInactive">Inactive</lable>
                            @Html.HiddenFor(x => x.RowStatusData.RowStatusId)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <div class="col-md-12" style="text-align: right;">
                <br />
                <a onclick="return SaveAgreement();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                    <span class="ladda-label">
                        Save
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
                <a href="@Url.Action("SchoolMaintenance","School", new { @branchID=0 })" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                    <span class="ladda-label">
                        Cancel
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
            </div>
        </div>
    </div>
</form>
