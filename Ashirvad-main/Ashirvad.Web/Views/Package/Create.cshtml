@model Ashirvad.Data.PackageEntity

<form id="fPackageDetail">
    <div class="form-group" id="dInformation">
        <div class="col-md-12">
            @Html.Label("Package Name", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.Package, new { @class = "form-control required", @alt = "Package Name", autocomplete = "off" })
            @Html.HiddenFor(x => x.PackageID)
        </div>
        <div class="col-md-12">
            @Html.Label("No of Student", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.Studentno, new { @class = "form-control required mobile", @alt = "No of Student", autocomplete = "off" })
        </div>
        <div class="form-group">
            <div class="col-md-12" style="text-align: right;">
                <br />
                <a onclick="return SavePackage();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                    <span class="ladda-label">
                        Save
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
                <a href="@Url.Action("PackageMaintenance","Package", new { @branchID=0 })" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                    <span class="ladda-label">
                        Cancel
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
            </div>
        </div>
    </div>
</form>
