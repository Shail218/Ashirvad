                    @Html.TextBox("Attendance Date",null, new { @class = "form-control required", autocomplete = "off", @readonly = "readonly", @alt = "Attendance Date" })
                }
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12" style="margin-top: 2.5%; text-align: right">
        <button class="btn btn-primary" OnClick="btnSubmit_Click">Submit</button>
    </div>
</div>


