<div class="row">
    <div class="col-md-3">
        @Html.Label("From Date", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
        <div id="datepickerfromdate" class="input-group date" data-date-format="dd/mm/yyyy">
                @if (Model == null)
                {
                    @Html.TextBox("From Date", null, new { @class = "form-control required", @alt = "From Date", autocomplete = "off", @readonly = "readonly" })
                }
                else
                {
                    @Html.TextBox("From Date",null, new { @class = "form-control required", autocomplete = "off", @readonly = "readonly", @alt = "From Date" })
                }
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
        </div>
    </div>
    <div class="col-md-3">
        @Html.Label("To Date", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
        <div id="datepickertodate" class="input-group date" data-date-format="dd/mm/yyyy">
                @if (Model == null)
                {
                    @Html.TextBox("To Date", null, new { @class = "form-control required", @alt = "To Date", autocomplete = "off", @readonly = "readonly" })
                }
                else
