@model Ashirvad.Data.StaffEntity
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="fUserDetail">
    <div class="form-group" id="dInformation">
        <section class="content">
            <div class="messagealert" id="alert_container"></div>
            <div class="row" style="padding-left:35%">
                <div class="col-md-7">
                    <div class="box box-warning">
                        <div class="box-header with-border" style="height:60px">
                            <h3 class="box-title" style="padding:10px">Profile</h3>
                        </div>
                        <div class="box-body" style="padding:10px">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @if (Model.Userrole == Ashirvad.Common.Enums.UserType.Admin)
                                        {
                                            @Html.Label("Full Name", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control required", @alt = "Full Name", autocomplete = "off" })
                                        }
                                        @Html.HiddenFor(x => x.StaffID)
                                        @Html.HiddenFor(x => x.UserID)
                                        @Html.HiddenFor(x => x.Transaction.TransactionId)
                                    </div>
                                    <div class="col-md-12">
                                        @if (Model.Userrole == Ashirvad.Common.Enums.UserType.Admin)
                                        {
                                            @Html.Label("User name(Login ID)", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                                            @Html.TextBoxFor(x => x.userNameNew, new { @class = "form-control required user name", autocomplete = "off", minlength = 3, alt = "User name(Login ID)" })
                                        }
                                        else
                                        {
                                            @Html.Label("User name(Login ID)", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                                            @Html.TextBoxFor(x => x.userNameNew, new { @class = "form-control required user name", autocomplete = "off", alt = "User name(Login ID)" })
                                        }
                                    </div>
                                    <div class="col-md-12">
                                        @if (Model.Userrole == Ashirvad.Common.Enums.UserType.Admin)
                                        {
                                            @Html.Label("Mobile No(Forgot Password)", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                                            @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control required mobile", autocomplete = "off", minlength = 3, alt = "Mobile No(Forgot Password)" })
                                        }
                                        else
                                        {
                                            @Html.Label("Mobile No(Forgot Password)", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                                            @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control required mobile", autocomplete = "off", alt = "Mobile No(Forgot Password)" })
                                        }
                                    </div>
                                    <div class="col-md-12">
                                        @if (Model.Userrole == Ashirvad.Common.Enums.UserType.Admin)
                                        {
                                            @Html.Label("Email ID", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                                            @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control required email", autocomplete = "off", alt = "Email ID" })
                                        }
                                    </div>
                                </div>
                                <div class="col-md-12" style="text-align: right;margin-top:27px;">
                                    <a href="#" onclick="SaveUser()" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                                        <span class="ladda-label">
                                            Save
                                        </span>
                                        <span class="ladda-spinner"></span>
                                    </a>
                                    <a href="@Url.Action("Index","Profile")" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                                        <span class="ladda-label">
                                            Cancel
                                        </span>
                                        <span class="ladda-spinner"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @section Scripts {
                <script type="text/javascript" src="~/scripts/app/profile.js"></script>
                @*<script src="~/ThemeData/plugins/jQuery/jquery-2.2.3.min.js"></script>*@
                <script src="~/ThemeData/plugins/datatables/jquery.dataTables.min.js"></script>
                <script src="~/ThemeData/plugins/datatables/dataTables.bootstrap.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
                <script>
                    $(document).ready(function () {

                        $('#studenttbl').DataTable({
                            "bPaginate": true,
                            "bLengthChange": false,
                            "bFilter": true,
                            "bInfo": true,
                            "bAutoWidth": true
                        });
                    });
                </script>
                <script type="text/javascript">
                    function ConfirmationDialog() {
                        if (confirm("Are you sure to continue?"))
                            return true;
                        else
                            return false;
                    }
                </script>
            }
        </section>
    </div>
</form>

