
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1><i class="fa fa-edit" style="margin-right: 5px;"></i>Admin Profile</h1>
</section>
<hr />
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-warning">
                <div class="box-header with-border">
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-4">
                                @Html.Label("Name", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                                @Html.TextBox("Name", null, new { @class = "form-control", autocomplete = "off" })
                            </div>
                            <div class="col-md-4">
                                @Html.Label("Mobile No (LogIn ID)", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                                @Html.TextBox("MobileNo", null, new { @class = "form-control", autocomplete = "off" })
                            </div>
                            <div class="col-md-4">
                                @Html.Label("Email ID", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                                @Html.TextBox("EmailID", null, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12" style="text-align: right;">
                                <button class="btn btn-primary" OnClick="btnSave_Click">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

