@using Ashirvad.Web.Controllers;
@model List<Ashirvad.Data.HomeworkEntity>

<table style="width: 100%;" id="studenttbl" class="table table-striped dataTable no-footer">
    <thead>
        <tr style="background-color:#005cbf;font-style:inherit;color:aliceblue">
            <th>
                Date
            </th>

            <th>
                Standard
            </th>

            <th>
                Subject
            </th>

            <th>
                Batch Time
            </th>

            <th>
                Homework
            </th>
            <th>
                Edit
            </th>
            <th class="HomeworkDelete">
                Delete
            </th>
            <th>
                Show Homewok
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.HomeworkDate.ToString("dd/MM/yyyy")
            </td>

            <td style="text-align:center;">
                @item.StandardInfo.Standard
            </td>
            <td>
                @item.SubjectInfo.Subject
            </td>
            <td>
                @item.BatchTimeText
                @Html.HiddenFor(x => item.BatchTimeID)
                @Html.HiddenFor(x => item.BranchInfo.BranchID)
                @Html.HiddenFor(x => item.HomeworkID)
            </td>
            <td style="text-align:center;">
                <a onclick="DownloadHomework('@item.HomeworkID')" id="paperdownload" download><img src="~/ThemeData/images/icons8-desktop-download-24 (1).png" /></a>
                @Html.HiddenFor(x => item.HomeworkID)
                <input hidden id="UniqID" value="@item.HomeworkID" />
            </td>
            <td>
                <a href="@Url.Action("HomeworkMaintenance", "HomeWork", new { homeworkID = item.HomeworkID, branchID = item.BranchInfo.BranchID})">
                    <img src="~/ThemeData/images/viewIcon.png" />
                </a>
            </td>
            <td class="HomeworkDelete" style="text-align:center;">
                <a href="#" onclick="RemoveHomework(@item.HomeworkID);">
                    <img src="~/ThemeData/images/delete.png" />
                </a>
            </td>
            <td style="text-align:center;">

                <a href="@Url.Action("StudentHomeworkDetails", "HomeWork",new { StudhID=item.HomeworkID})">
                    <img src="~/ThemeData/images/tick.png" style="height:35px;width:35px" />
                </a>
            </td>
        </tr>
    }

</table>


