﻿@using Ashirvad.Web.Controllers;
@model List<Ashirvad.Data.HomeworkEntity>

<table style="width: 100%;" id="studenttbl" class="table table-striped dataTable no-footer">
    <thead>
        <tr style="background-color:#005cbf;font-style:inherit;color:aliceblue">
            <th>
                Date
            </th>

            <th>
                Standard
            </th>

            <th>
                Subject
            </th>

            <th>
                Batch Time
            </th>

            <th>
                Homework
            </th>

            <th>
                Remarks
            </th>

            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
            <th>
                Show Homewok
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.HomeworkDate
            </td>

            <td>
                @item.StandardInfo.Standard
            </td>
            <td>
                @item.SubjectInfo.Subject
            </td>
            <td>
                @item.BatchTimeText
                @Html.HiddenFor(x => item.BatchTimeID)
            </td>
            <td></td>
            <td>
                @item.Remarks
            </td>
            <td>
                <a href="@Url.Action("Index", "/Homework/HomeworkMaintenance", new { homeworkID = item.HomeworkID,branchID=0})">
                    <img src="~/ThemeData/images/viewIcon.png" />
                </a>
            </td>
            <td>
                <a href="#" onclick="RemoveHomework(@item.HomeworkID);">
                    <img src="~/ThemeData/images/delete.png" />
                </a>
            </td>
            <td>
                @*<a href="@Url.Action("Index", "/Homework/HomeworkMaintenance", new { homeworkID = item.HomeworkID,branchID=0})">
                        <img src="~/ThemeData/images/viewIcon.png" />
                    </a>*@
                <a href="#">
                    <img src="~/ThemeData/images/viewIcon.png" />
                </a>
            </td>
        </tr>
    }

</table>







