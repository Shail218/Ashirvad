@model Ashirvad.Data.BatchEntity
<form id="fBatchDetail">
    <div class="form-group" id="dInformation">
        @if (SessionContext.Instance.LoginUser.UserType == Ashirvad.Common.Enums.UserType.SuperAdmin)
        {
            <div class="col-md-12">
                @Html.Label("Select Branch", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                <select name="BranchName" id="BranchName" class="form-control requiredDDL select2" alt="Branch">
                    <option value="0">--Select Branch--</option>
                </select>
                @Html.HiddenFor(x => x.BranchInfo.BranchID)
            </div>
        }
        else
        {
            <div class="col-md-12" style="display: none;">
                @Html.Label("Select Branch", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                <select name="BranchName" id="BranchName" class="form-control" alt="Branch">
                    <option value="0">--Select Branch--</option>
                </select>
                @Html.HiddenFor(x => x.BranchInfo.BranchID)
            </div>
        }
        <div class="col-md-6">
            @Html.Label("Course", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <select name="CourseName" id="CourseName" class="form-control requiredDDL" alt="Course">
                <option value="0">--Select Course--</option>
            </select>
            @Html.HiddenFor(x => x.BranchCourse.course_dtl_id)
        </div>
        <div class="col-md-6">
            @Html.Label("Standard", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <select name="StandardName" id="StandardName" class="form-control requiredDDL" alt="Standard Name">
                <option value="0">--Select Standard--</option>
            </select>
            @Html.HiddenFor(x => x.BranchClass.Class_dtl_id)
        </div>
        <div class="col-md-12">
            @Html.Label("Batch Name", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <select name="BatchName" id="BatchName" class="form-control requiredDDL select2" alt="Batch Name">
                <option value="0">--Select Batch Name--</option>
                <option value="1">Morning</option>
                <option value="2">Afternoon</option>
                <option value="3">Evening</option>
            </select>
            @Html.HiddenFor(x => x.BatchType)
            @Html.HiddenFor(x => x.BatchTime)
            @Html.HiddenFor(x => x.BatchID)
            @Html.HiddenFor(x => x.MonFriBatchTime)
            @Html.HiddenFor(x => x.SatBatchTime)
            @Html.HiddenFor(x => x.SunBatchTime)
        </div>
        <div style="text-align: center; margin-top: 2%" class="col-md-12">
            @Html.Label("Monday-Friday", htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @Html.Label("Start Time", htmlAttributes: new { @class = "control-label" })<span style="color:red">* </span>
            @Html.TextBox("Start Time", null, new { @class = "form-control  readonly timeformat", @alt = "Monday-Friday Start Time", autocomplete = "off", @type = "time", @Id = "starttime" })
        </div>
        <div class="col-md-6">
            @Html.Label("End Time", htmlAttributes: new { @class = "control-label" })<span style="color:red">* </span>
            @Html.TextBox("End Time", null, new { @class = "form-control  readonly timeformat", @alt = "Monday-Friday End Time", autocomplete = "off", @type = "time", @Id = "endtime" })
        </div>
        <div style="text-align: center; margin-top: 1%" class="col-md-12">
            @Html.Label("Saturday", htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @Html.Label("Start Time", htmlAttributes: new { @class = "control-label" })<span style="color:red">* </span>
            @Html.TextBox("Start Time", null, new { @class = "form-control  readonly timeformat", @alt = "Saturday Start Time", autocomplete = "off", @type = "time", @Id = "sttimestart" })
        </div>
        <div class="col-md-6">
            @Html.Label("End Time", htmlAttributes: new { @class = "control-label" })<span style="color:red">* </span>
            @Html.TextBox("End Time", null, new { @class = "form-control  readonly timeformat", @alt = "Saturday End Time", autocomplete = "off", @type = "time", @Id = "sttimeend" })
        </div>
        <div style="text-align: center; margin-top: 1%" class="col-md-12">
            @Html.Label("Sunday", htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @Html.Label("Start Time", htmlAttributes: new { @class = "control-label" })<span style="color:red">* </span>
            @Html.TextBox("Start Time", null, new { @class = "form-control  readonly timeformat", @alt = "Sunday Start Time", autocomplete = "off", @type = "time", @Id = "snstarttime" })
        </div>
        <div class="col-md-6">
            @Html.Label("End Time", htmlAttributes: new { @class = "control-label" })<span style="color:red">* </span>
            @Html.TextBox("End Time", null, new { @class = "form-control  readonly timeformat", @alt = "Sunday End Time", autocomplete = "off", @type = "time", @Id = "snendtime" })
        </div>
        <div class="form-group BatchMasterCreate">
            <div class="col-md-12" style="text-align: right;">
                <br />
                <a href="#" onclick="return SaveBatch();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                    <span class="ladda-label">
                        Save
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
                <a href="@Url.Action("BatchMaintenance","Batch", new { @branchID=0 })" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                    <span class="ladda-label">
                        Cancel
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
            </div>
        </div>
    </div>
</form>    