
@{
    ViewBag.Title = "Batch Time";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="messagealert" id="alert_container"></div>
    <div class="row">
        <section class="col-md-4">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Batch Time Entry</h3>
                    @{
                        Html.RenderPartial("CreateBatchTime");
                    }
                </div>
            </div>
        </section>
        <section class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="col-md-6" id="exceltitle">Batch Time Details</h3>
                    @{
                        Html.RenderPartial("ManageBatchTime");
                    }
                </div>
            </div>
        </section>
    </div>
    @section Scripts {
        @*<script src="~/ThemeData/plugins/jQuery/jquery-2.2.3.min.js"></script>*@
        <script src="~/ThemeData/plugins/datatables/jquery.dataTables.min.js"></script>
        <script src="~/ThemeData/plugins/datatables/dataTables.bootstrap.min.js"></script>
        @*<script type="text/javascript" src="~/scripts/app/batch.js"></script>*@
        <script>
                $(document).ready(function () {
                    $('#batchtable').DataTable({
                        "bPaginate": true,
                        "bLengthChange": false,
                        "bFilter": true,
                        "bInfo": true,
                        "bAutoWidth": true

                    });
                });
        </script>
        <script type="text/javascript">
            function ConfirmationDialog() {
                if (confirm("Are you sure to continue?"))
                    return true;
                else
                    return false;
            }
        </script>

    }

</section>



