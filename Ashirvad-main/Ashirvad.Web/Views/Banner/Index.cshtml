@model Ashirvad.Data.Model.BannerMaintenanceModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content">
    <div class="messagealert" id="alert_container"></div>
    <div class="row">
        <section class="col-md-5">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Banner Entry</h3>
               
                    @{
                        Html.RenderPartial("Create", new ViewDataDictionary(Model.BannerInfo));
                    }
                </div>
            </div>
        </section>
        <section class="col-md-7">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="col-md-6" id="exceltitle">Banner Details</h3>
                    <button type="button" onclick="Exportdata('Banner')" style="border:2px groove green"><i class="fa fa-file-excel-o" style="color:green"></i>Export</button>
                    @{
                        Html.RenderPartial("Manage", new ViewDataDictionary(Model.BannerData));
                    }
                </div>
            </div>
        </section>
    </div>

    @section Scripts {
        <script type="text/javascript" src="~/scripts/app/banner.js"></script>
        @*<script src="~/ThemeData/plugins/jQuery/jquery-2.2.3.min.js"></script>*@
        <script src="~/ThemeData/plugins/datatables/jquery.dataTables.min.js"></script>
        <script src="~/ThemeData/plugins/datatables/dataTables.bootstrap.min.js"></script>
        <script>
            $(document).ready(function () {

                $('#studenttbl').DataTable({
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": true,
                    "bInfo": true,
                    "bAutoWidth": true,
                    "order": [[0, "desc"]]
                });
            });
        </script>
        <script type="text/javascript">
            function ConfirmationDialog() {
                if (confirm("Are you sure to continue?"))
                    return true;
                else
                    return false;
            }
        </script>

    }

</section>

