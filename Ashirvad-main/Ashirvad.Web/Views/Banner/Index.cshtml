﻿@model Ashirvad.Data.Model.BannerMaintenanceModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1><i class="fa fa-edit" style="margin-right: 5px;"></i>Banner Master</h1>
</section>
<hr />
<section class="content">
    <div class="row">
        <div class="messagealert" id="alert_container"></div>
        @if (SessionContext.Instance.LoginUser.UserType == Ashirvad.Common.Enums.UserType.SuperAdmin)
        {
            <section class="col-md-5">
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Banner Entry<h3>
                    </div>
                    <div class="box-body">
                        @{Html.RenderPartial("Create", Model.BannerInfo);
                        }
                    </div>
                </div>
            </section>
                            }

        @if (SessionContext.Instance.LoginUser.UserType == Ashirvad.Common.Enums.UserType.SuperAdmin)
        {
            <section class="col-md-7">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Banner Details<h3>
                    </div>
                    <div class="box-body">
                        @{
                            Html.RenderPartial("Manage", new ViewDataDictionary(Model.BannerData));
                        }
                    </div>
                </div>
            </section>
                            }
                            else
                            {
                                <section class="col-md-12">
                                    <div class="box box-primary">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">Banner Details<h3>
                                        </div>
                                        <div class="box-body">
                                            @{
                                                Html.RenderPartial("Manage", new ViewDataDictionary(Model.BannerData));
                                            }
                                        </div>
                                    </div>
                                </section>
                                                }


    </div>
    @section Scripts {
        <script src="~/scripts/app/banner.js"></script>
        @*<script src="~/ThemeData/plugins/jQuery/jquery-2.2.3.min.js"></script>*@
        <script src="~/ThemeData/plugins/datatables/jquery.dataTables.min.js"></script>
        <script src="~/ThemeData/plugins/datatables/dataTables.bootstrap.min.js"></script>
        <script>
            $(document).ready(function () {
                $(document).ready(function () {
                    $('#studenttbl').DataTable({
                        "bPaginate": true,
                        "bLengthChange": false,
                        "bFilter": true,
                        "bInfo": true,
                        "bAutoWidth": true
                    });
                });
            });
        </script>
        <script type="text/javascript">
            function ConfirmationDialog() {
                if (confirm("Are you sure to continue?"))
                    return true;
                else
                    return false;
            }
        </script>

    }
</section>
