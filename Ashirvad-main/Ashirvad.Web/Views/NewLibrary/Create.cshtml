@model Ashirvad.Data.LibraryEntity1

<form id="flibimage">
    <div class="form-group" id="dInformation">
        <div class="col-md-12">
            @Html.Label("Title", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control required", @alt = "Category Name", autocomplete = "off" })
        
        </div>

        <div class="col-md-12" style="margin-bottom:10px">
            @Html.Label("Upload Image", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <input class="file-upload" alt="Student Image" id="fuStudentImage" name="ImageFile" type="file" accept="image/*" />
            @Html.HiddenFor(x => x.ImageFile)
        </div>
        <div class="col-md-12">
            @Html.Label("Description", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control required", @alt = "Category Name", autocomplete = "off" })
            @Html.HiddenFor(x => x.LibraryID)
            @Html.HiddenFor(x => x.LibraryDetailID)
        </div>

        <div class="col-md-12">
            @Html.Label("Select Category Name", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <select name="CategoryName" id="CategoryName" class="form-control requiredDDL select2" alt="School Name">
                <option value="0">--Select Category Name--</option>
            </select>
            @Html.HiddenFor(x => x.CategoryInfo.CategoryID)
        </div>

        @if (SessionContext.Instance.LoginUser.UserType == Ashirvad.Common.Enums.UserType.SuperAdmin)
        {
            <div class="col-md-12">
                @Html.Label("Select Branch", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                <select name="BranchName" id="BranchName" class="form-control requiredDDL select2" alt="Branch">
                    <option value="0">--Select Branch--</option>
                </select>
                @Html.HiddenFor(x => x.BranchInfo.BranchID)
            </div> }
        else
        {
            <div class="col-md-12" style="display: none;">
                @Html.Label("Select Branch", htmlAttributes: new { @class = "control-label" })
                <select name="BranchName" id="BranchName" class="form-control" alt="Branch">
                    <option value="0">--Select Branch--</option>
                </select>
                @Html.HiddenFor(x => x.BranchInfo.BranchID)
            </div>
        }
        <div class="form-group LibraryImageCreate">
            <div class="col-md-12" style="text-align: right;">
                <br />
                <a onclick="return SaveLibraryImage();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                    <span class="ladda-label">
                        Save
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
                <a href="@Url.Action("LibraryMaintenance","NewLibrary", new { LibraryID=0,Type=2})" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                    <span class="ladda-label">
                        Cancel
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
            </div>
        </div>
    </div>
</form>

