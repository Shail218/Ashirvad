<div class="row">
    <div class="form-group">
        <div class="col-md-4">
            @Html.Label("Select Branch", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.DropDownList("Branch", new List<SelectListItem>
                           {
                           new SelectListItem{ Text="---Select-Branch---", Value = "-1" },
                            new SelectListItem{ Text="Branch", Value = "1" },
