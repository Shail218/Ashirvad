@model List<Ashirvad.Data.AttendanceEntity>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1><i class="fa fa-edit" style="margin-right: 5px;"></i>Student Attendance Register</h1>
</section>
<hr />
<section class="content">
    <div class="row">
        @if (SessionContext.Instance.LoginUser.UserType == Ashirvad.Common.Enums.UserType.SuperAdmin)
        {
            <section class="col-md-12">
                <div class="box box-warning">
                    <div class="box-body">
                        @{
                            Html.RenderPartial("Create");
                        }
                    </div>
                </div>
            </section>
        }
        <section class="col-md-12">
            <div class="box box-primary">
                <div class="box-body" id="AttendanceData">
                    @{
                        Html.RenderPartial("Manage", new ViewDataDictionary(Model));
                    }
                </div>
            </div>
        </section>
    </div>
