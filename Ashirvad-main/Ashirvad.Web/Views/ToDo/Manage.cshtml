<table style="width: 100%;" id="studenttbl" class="table table-striped dataTable no-footer">
    <thead>
        <tr style="background-color:#005cbf;font-style:inherit;color:aliceblue">
            <th>
                Branch Name
            </th>

            <th>
                Task Date
            </th>

            <th>
                Staff Name
            </th>

            <th>
                Document
            </th>

            <th>
                Description
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.BranchInfo.BranchName
                </td>

                <td>
                    @item.ToDoDate
                </td>
                <td>
                    @item.UserInfo.Username
                    @Html.HiddenFor(x => item.UserInfo.UserID)
                </td>
                <td>
                    @item.ToDoFileName
                </td>
                <td>
                    @item.ToDoDescription
                </td>
                <td>
                    <a href="@Url.Action("Index", "/ToDo/ToDoMaintenance", new { todoID = item.ToDoID})">
                        <img src="~/ThemeData/images/viewIcon.png" />
                    </a>
                </td>
                <td>
                    <a href="#" onclick="RemoveToDo(@item.ToDoID);">
                        <img src="~/ThemeData/images/delete.png" />
                    </a>
                </td>
            </tr>
        }
    }

</table>







