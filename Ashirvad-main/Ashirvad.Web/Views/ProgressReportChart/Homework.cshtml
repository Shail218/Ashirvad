@model List<Ashirvad.Data.Model.DataPoints>
@{
    /**/

    Layout = null;
}

<h3 style="text-align: center;margin-top:1%">Homework</h3>
@if (Model != null)
{
    <div class="col-md-6">
        @foreach (var item in Model)
        {
            <div class="courses-container" style="width: 160px; margin: 10px">
                <div class="course">
                    <div class="course-info" style="text-align: center">
                        <label Style="opacity: 0.6; letter-spacing: 0.5px; text-transform: uppercase; margin: 5px 0 0 0; font-size: 12px">@item.label</label><br />
                        <a href="#" style="color:red">@item.Days Day</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <div id="homeworkContainer" style="height: 200px; width: 100%;"></div>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-4">
        <div class="courses-container" style="width: 150px; margin: 10px; text-align: right">
            <div class="course">
                <div class="course-info" style="text-align: center">
                    <label Style="opacity: 0.6; letter-spacing: 0.5px; text-transform: uppercase; margin: 5px 0 0 0; font-size: 12px">Overall</label><br />
                    <a href="#" style="color:red">@Model.LastOrDefault().Days Days</a>
                </div>
            </div>
        </div>
    </div>
}