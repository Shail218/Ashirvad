@model Ashirvad.Data.FeesEntity
<form id="fFeesDetail">
    <div class="form-group" id="dInformation">
        @if (SessionContext.Instance.LoginUser.UserType == Ashirvad.Common.Enums.UserType.SuperAdmin)
        {
            <div class="col-md-6">
                @Html.Label("Select Branch", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                <select name="BranchName" id="BranchName" class="form-control requiredDDL select2" alt="Branch">
                    <option value="0">--Select Branch--</option>
                </select>
                @Html.HiddenFor(x => x.BranchInfo.BranchID)
            </div>
            <div class="col-md-6">
                @Html.Label("Select Standard", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                <select name="StandardName" id="StandardName" class="form-control requiredDDL select2" alt="Standard">
                    <option value="0">--Select Standard--</option>
                </select>
                @Html.HiddenFor(x => x.standardInfo.StandardID)
            </div>
        }
        else
        {
            <div class="col-md-6" style="margin-bottom: 9px">
                @Html.Label("Select Course", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                <select name="CourseName" id="CourseName" class="form-control requiredDDL select2" alt="Course">
                    <option value="0">--Select Course--</option>
                </select>
                @Html.HiddenFor(x => x.BranchCourse.course_dtl_id)
            </div>
            <div class="col-md-6" style="margin-bottom: 9px">
                @Html.Label("Select Standard", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                <select name="StandardName" id="StandardName" class="form-control requiredDDL select2" alt="Standard">
                    <option value="0">--Select Standard--</option>
                </select>
                @Html.HiddenFor(x => x.BranchClass.Class_dtl_id)
                @Html.HiddenFor(x => x.BranchInfo.BranchID)
            </div>
        }
        <div class="col-md-12" style="margin-bottom: 12px">
            @Html.Label("Uploaded Structure Image", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <input class="file-upload fileRequired" alt="Image" id="fuFeeImage" name="ImageFile" type="file" accept="image/*" />
            @Html.HiddenFor(x => x.FileName)
            @Html.HiddenFor(x => x.FilePath)
            @Html.HiddenFor(x => x.FeesDetailID)
            @Html.HiddenFor(x => x.FeesID)
        </div>
        <div class="col-md-12">
            @Html.Label("Remark", htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Remark, new { @class = "form-control", @alt = "Remark", autocomplete = "off" })
        </div>
        <div class="form-group StudentFeesStructureCreate">
            <div class="col-md-12" style="text-align: right;">
                <br />
                <a onclick="return SaveFeeStructure();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                    <span class="ladda-label">
                        Save
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
                <a href="@Url.Action("FeesMaintenance","FeesStructure", new { @FeesID=0 })" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                    <span class="ladda-label">
                        Cancel
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
            </div>
        </div>
    </div>
</form>