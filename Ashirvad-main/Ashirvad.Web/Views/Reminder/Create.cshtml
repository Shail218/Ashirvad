@model Ashirvad.Data.ReminderEntity
<form id="fReminderDetail">
    <div class="form-group" id="dInformation">
        <div class="col-md-6">
            @Html.Label("Date", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <div id="datepickerreminder" class="input-group date" data-date-format="dd/mm/yyyy">
                @if (Model == null)
                {
                    @Html.TextBoxFor(x => x.ReminderDate, null, new { @class = "form-control required", @alt = "Reminder Date", autocomplete = "off", @readonly = "readonly" })
                }
                else
                {
                    @Html.TextBoxFor(x => x.ReminderDate, Model.ReminderDate.ToString("dd/MM/yyyy"), new { @class = "form-control required", autocomplete = "off", @readonly = "readonly", @alt = "Reminder Date" })
                }
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
            @Html.HiddenFor(x => x.ReminderID)
        </div>
        <div class="col-md-6">
            @Html.Label("Time", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.ReminderTime, new { @class = "form-control required", @alt = "Reminder Time", autocomplete = "off"})
        </div>
        <div class="col-md-12">
            @Html.Label("Remarks", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.ReminderDesc, new { @class = "form-control required", @alt = "Remarks", autocomplete = "off" })
        </div>
    </div>
    <div class="form-group ReminderEntryCreate">
        <div class="col-md-12" style="text-align: right;">
            <a onclick="return SaveReminder();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                <span class="ladda-label">
                    Save
                </span>
                <span class="ladda-spinner"></span>
            </a>
            <a href="@Url.Action("ReminderMaintenance","Reminder", new { @reminderID=0})" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                <span class="ladda-label">
                    Cancel
                </span>
                <span class="ladda-spinner"></span>
            </a>
        </div>
    </div>
</form>

