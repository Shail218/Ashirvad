<div class="form-group">
    <div class="col-md-12">
        @Html.Label("Brand Name", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
        @Html.TextArea("BrandName", null, new { @class = "form-control", autocomplete = "off" })
    </div>
    <div class="col-md-12">
        @Html.Label("Header Image", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
        @Html.TextBox("file", null, new { type = "file", htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <div class="col-md-12" style="text-align: right;">
            <button id="btnDelete" class="btn btn-danger" OnClick="btnDelete_Click" CausesValidation="false">
                Cancel
            </button>
            <button id="btnSave" class="btn btn-primary" OnClick="btnSave_Click">
                Save
            </button>
            <button id="btnUpdate" class="btn btn-primary" OnClick="btnUpdate_Click">
                Update
            </button>
        </div>
    </div>
</div>
