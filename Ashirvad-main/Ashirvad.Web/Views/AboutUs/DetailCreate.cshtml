@model Ashirvad.Data.AboutUsDetailEntity
<section class="col-md-12">
    <div class="box box-warning">
        <div class="box-header with-border">
            <h3 class="box-title">Detail Entry<h3>
        </div>
        <div class="box-body">
            <div class="form-group" id="dInformation">
                <div class="col-md-4">
                    @Html.Label("Brand Name", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                    @Html.TextBoxFor(x => x.BrandName, new { @class = "form-control", autocomplete = "off" })
                </div>
                <div class="col-md-4">
                    @Html.Label("Header Image", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
                    @Html.TextBox("file", null, new { type = "file", htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <div class="col-md-4" style="text-align: right;margin-top:27px;">
                        <a onclick="return SaveDetails();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                            <span class="ladda-label">
                                Save
                            </span>
                            <span class="ladda-spinner"></span>
                        </a>
                        <a href="@Url.Action("UserMaintenance","User", new { @branchID=0 })" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                            <span class="ladda-label">
                                Cancel
                            </span>
                            <span class="ladda-spinner"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

