@model Ashirvad.Data.CourseEntity
<form id="fCaurseDetail">
    <div class="form-group" id="dInformation">
        <div class="col-md-12">
            @Html.Label("Course Name", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            @Html.TextBoxFor(x => x.CourseName, new { @class = "form-control required", @alt = "Course Name", autocomplete = "off" })
            @Html.HiddenFor(x => x.CourseID)
        </div>
        <div class="col-md-12" style="margin-bottom:10px;">
            @Html.Label("Upload Image", htmlAttributes: new { @class = "control-label" })<span style="color:red">*</span>
            <input class="file-upload fileRequired" alt="Caurse Image" id="fuCaurseImage" name="ImageFile" type="file" accept="image/*" />
            @Html.HiddenFor(x => x.ImageFile)
            @Html.HiddenFor(x => x.filename)
            @Html.HiddenFor(x => x.filepath)
        </div>
        <div class="form-group">
            <div class="col-md-12" style="text-align: right;">
                <br />
                <a onclick="return SaveCourse();" class="ladda-button mb-2 mr-2 btn btn-primary" data-style="expand-left">
                    <span class="ladda-label">
                        Save
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
                <a href="@Url.Action("CourseMaintenance","Caurse", new { @courseID=0 })" class="ladda-button mb-2 mr-2 btn btn-danger" data-style="expand-left">
                    <span class="ladda-label">
                        Cancel
                    </span>
                    <span class="ladda-spinner"></span>
                </a>
            </div>
        </div>
    </div>
</form>